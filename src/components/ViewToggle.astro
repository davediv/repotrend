---
import { getMondayOfWeek } from "../lib/dates";

interface Props {
	activeView: "daily" | "weekly";
	currentDate: string;
}

const { activeView, currentDate } = Astro.props;

const dailyHref = `/trending/${currentDate}`;
const weeklyHref = `/trending/week/${getMondayOfWeek(currentDate)}`;
---

<nav class="view-toggle" aria-label="View mode">
	<a
		href={dailyHref}
		class:list={["view-toggle-btn", { active: activeView === "daily" }]}
		aria-current={activeView === "daily" ? "page" : undefined}
	>
		Daily
	</a>
	<a
		href={weeklyHref}
		class:list={["view-toggle-btn", { active: activeView === "weekly" }]}
		aria-current={activeView === "weekly" ? "page" : undefined}
	>
		Weekly
	</a>
</nav>

<style>
	.view-toggle {
		display: inline-flex;
		border: 1px solid var(--color-border);
		border-radius: 6px;
		overflow: hidden;
	}

	.view-toggle-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.375rem 0.875rem;
		font-family: inherit;
		font-size: 0.8125rem;
		font-weight: 500;
		text-decoration: none;
		color: var(--color-text-secondary);
		background: var(--color-bg);
		border: none;
		cursor: pointer;
		transition:
			color 0.15s,
			background-color 0.15s;
	}

	.view-toggle-btn:first-child {
		border-right: 1px solid var(--color-border);
	}

	.view-toggle-btn:hover:not(.active) {
		background-color: var(--color-bg-secondary);
		color: var(--color-text);
	}

	.view-toggle-btn:focus-visible {
		outline: 2px solid var(--color-accent);
		outline-offset: -2px;
		z-index: 1;
	}

	.view-toggle-btn.active {
		background-color: var(--color-accent);
		color: var(--color-accent-text);
		cursor: default;
	}

	@media (max-width: 640px) {
		.view-toggle {
			display: flex;
			width: 100%;
		}

		.view-toggle-btn {
			flex: 1;
			min-height: 44px;
			padding: 0.625rem 0.875rem;
			font-size: 0.875rem;
		}
	}
</style>

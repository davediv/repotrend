---
import "../styles/repo-card.css";
import "../styles/language-chart.css";

interface Props {
	title?: string;
	description?: string;
	ogType?: string;
}

const {
	title = "RepoTrend — GitHub Trending Archive",
	description = "Browse the historical archive of GitHub trending repositories, daily and weekly.",
	ogType = "website",
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={canonicalUrl.href} />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalUrl.href} />
		<meta property="og:type" content={ogType} />
		<meta property="og:site_name" content="RepoTrend" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<title>{title}</title>
		<script is:inline>
			(function () {
				var stored = localStorage.getItem("repotrend-theme");
				if (stored === "dark" || (!stored && matchMedia("(prefers-color-scheme: dark)").matches)) {
					document.documentElement.classList.add("dark");
				}
			})();
		</script>
	</head>
	<body>
		<a href="#main-content" class="skip-link">Skip to content</a>
		<header role="banner">
			<div class="header-inner">
				<a href="/" class="logo">
					<span class="logo-name">RepoTrend</span>
					<span class="tagline">GitHub Trending Archive</span>
				</a>
				<nav aria-label="Site">
					<form class="search-form" action="/search" method="get" role="search" aria-label="Search trending repos">
						<label for="header-search" class="search-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
								<circle cx="11" cy="11" r="8"></circle>
								<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
							</svg>
							<span class="sr-only">Search</span>
						</label>
						<input
							type="search"
							id="header-search"
							name="q"
							class="search-input"
							placeholder="Search trending repos..."
							aria-label="Search trending repos"
							autocomplete="off"
						/>
					</form>
					<button
						id="theme-toggle"
						type="button"
						aria-label="Toggle dark mode"
					>
						<svg
							class="icon-sun"
							xmlns="http://www.w3.org/2000/svg"
							width="20"
							height="20"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							aria-hidden="true"
						>
							<circle cx="12" cy="12" r="5"></circle>
							<line x1="12" y1="1" x2="12" y2="3"></line>
							<line x1="12" y1="21" x2="12" y2="23"></line>
							<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
							<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
							<line x1="1" y1="12" x2="3" y2="12"></line>
							<line x1="21" y1="12" x2="23" y2="12"></line>
							<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
							<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
						</svg>
						<svg
							class="icon-moon"
							xmlns="http://www.w3.org/2000/svg"
							width="20"
							height="20"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							aria-hidden="true"
						>
							<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
						</svg>
					</button>
				</nav>
			</div>
		</header>

		<main id="main-content" role="main">
			<div class="main-inner">
				<slot />
			</div>
		</main>

		<footer role="contentinfo">
			<div class="footer-inner">
				<p>
					Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro<span class="sr-only"> (opens in new tab)</span></a> &
					<a href="https://workers.cloudflare.com" target="_blank" rel="noopener noreferrer">Cloudflare Workers<span class="sr-only"> (opens in new tab)</span></a>
				</p>
				<a
					href="https://github.com/div-vik/repotrend"
					target="_blank"
					rel="noopener noreferrer"
					class="github-link"
					aria-label="RepoTrend on GitHub (opens in new tab)"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="18"
						height="18"
						viewBox="0 0 24 24"
						fill="currentColor"
						aria-hidden="true"
					>
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					GitHub
				</a>
			</div>
		</footer>
		<script>
			const toggle = document.getElementById("theme-toggle")!;

			function updateToggleLabel(): void {
				const isDark = document.documentElement.classList.contains("dark");
				toggle.setAttribute("aria-label", isDark ? "Switch to light mode" : "Switch to dark mode");
			}

			toggle.addEventListener("click", () => {
				const isDark = document.documentElement.classList.toggle("dark");
				localStorage.setItem("repotrend-theme", isDark ? "dark" : "light");
				updateToggleLabel();
			});

			updateToggleLabel();
		</script>
	</body>
</html>

<style is:global>
	/* Reset & Base */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html {
		/* Backgrounds */
		--color-bg: #ffffff;
		--color-bg-secondary: #f6f8fa;
		--color-bg-tertiary: #eaeef2;

		/* Text */
		--color-text: #1f2328;
		--color-text-secondary: #656d76;

		/* Borders */
		--color-border: #d0d7de;
		--color-border-hover: #afb8c1;

		/* Links */
		--color-link: #0969da;
		--color-link-hover: #0550ae;

		/* Accent */
		--color-accent: #0969da;
		--color-accent-text: #ffffff;

		/* Shadows */
		--color-shadow: rgba(31, 35, 40, 0.04);
		--color-shadow-hover: rgba(31, 35, 40, 0.1);

		/* Stars highlight */
		--color-stars-today: #9a6700;

		/* Streak badge */
		--color-streak: #bc4c00;
		--color-streak-bg: #fff8f0;
		--color-streak-border: #ffe0c2;

		/* New entry badge */
		--color-new-entry: #1a7f37;
		--color-new-entry-bg: #f0fff4;
		--color-new-entry-border: #b4e9c8;

		/* Sparkline */
		--color-sparkline: #0969da;

		/* Calendar heatmap */
		--color-heatmap-empty: #ebedf0;
		--color-heatmap-l1: #9be9a8;
		--color-heatmap-l2: #40c463;
		--color-heatmap-l3: #30a14e;
		--color-heatmap-l4: #216e39;

		/* Compare: common repo highlight */
		--color-common: #8250df;
		--color-common-bg: #fbefff;
		--color-common-border: #d8b9ff;

		margin: 0;
		font-family:
			-apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica, Arial, sans-serif,
			"Apple Color Emoji", "Segoe UI Emoji";
		font-size: 16px;
		background-color: var(--color-bg);
		color: var(--color-text);
		line-height: 1.5;
		color-scheme: light;
		overflow-x: hidden;
	}

	html.dark {
		/* Backgrounds */
		--color-bg: #0d1117;
		--color-bg-secondary: #161b22;
		--color-bg-tertiary: #21262d;

		/* Text */
		--color-text: #e6edf3;
		--color-text-secondary: #8b949e;

		/* Borders */
		--color-border: #30363d;
		--color-border-hover: #484f58;

		/* Links */
		--color-link: #58a6ff;
		--color-link-hover: #79c0ff;

		/* Accent */
		--color-accent: #58a6ff;
		--color-accent-text: #0d1117;

		/* Shadows */
		--color-shadow: rgba(0, 0, 0, 0.2);
		--color-shadow-hover: rgba(0, 0, 0, 0.4);

		/* Stars highlight */
		--color-stars-today: #e3b341;

		/* Streak badge */
		--color-streak: #f0883e;
		--color-streak-bg: #271c14;
		--color-streak-border: #5a3520;

		/* New entry badge */
		--color-new-entry: #3fb950;
		--color-new-entry-bg: #0f1a13;
		--color-new-entry-border: #1b4a28;

		/* Sparkline */
		--color-sparkline: #58a6ff;

		/* Calendar heatmap */
		--color-heatmap-empty: #161b22;
		--color-heatmap-l1: #0e4429;
		--color-heatmap-l2: #006d32;
		--color-heatmap-l3: #26a641;
		--color-heatmap-l4: #39d353;

		/* Compare: common repo highlight */
		--color-common: #bc8cff;
		--color-common-bg: #1c1029;
		--color-common-border: #553d7a;

		color-scheme: dark;
	}

	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		overflow-x: hidden;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}

	/* Global focus-visible indicator for all interactive elements */
	a:focus-visible,
	button:focus-visible,
	input:focus-visible,
	select:focus-visible,
	textarea:focus-visible {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
		border-radius: 2px;
	}
</style>

<style>
	/* Skip-to-content link */
	.skip-link {
		position: absolute;
		top: -100%;
		left: 50%;
		transform: translateX(-50%);
		z-index: 200;
		padding: 0.5rem 1rem;
		background: var(--color-accent);
		color: var(--color-accent-text);
		font-size: 0.875rem;
		font-weight: 500;
		text-decoration: none;
		border-radius: 0 0 6px 6px;
		transition: top 0.15s;
	}

	.skip-link:focus {
		top: 0;
	}

	/* Header */
	header {
		border-bottom: 1px solid var(--color-border);
		background-color: var(--color-bg);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-inner {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		height: 64px;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		display: flex;
		align-items: baseline;
		gap: 0.5rem;
		text-decoration: none;
		color: var(--color-text);
	}

	.logo-name {
		font-size: 1.25rem;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.tagline {
		font-size: 0.8125rem;
		color: var(--color-text-secondary);
	}

	nav {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.search-form {
		position: relative;
		display: flex;
		align-items: center;
	}

	.search-icon {
		position: absolute;
		left: 0.625rem;
		display: flex;
		align-items: center;
		color: var(--color-text-secondary);
		cursor: text;
	}

	.search-input {
		width: 200px;
		height: 36px;
		padding: 0 0.75rem 0 2.125rem;
		border: 1px solid var(--color-border);
		border-radius: 6px;
		background: var(--color-bg-secondary);
		color: var(--color-text);
		font-family: inherit;
		font-size: 0.8125rem;
		transition:
			border-color 0.15s,
			background-color 0.15s,
			width 0.2s;
	}

	.search-input::placeholder {
		color: var(--color-text-secondary);
	}

	.search-input:focus {
		width: 260px;
		border-color: var(--color-accent);
		background-color: var(--color-bg);
	}

	#theme-toggle {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border: 1px solid var(--color-border);
		border-radius: 6px;
		background: transparent;
		color: var(--color-text-secondary);
		cursor: pointer;
		transition: color 0.15s, border-color 0.15s;
	}

	#theme-toggle:hover {
		color: var(--color-text);
		border-color: var(--color-border-hover);
	}

	/* Light mode: show moon icon (switch to dark). Dark mode: show sun icon (switch to light). */
	.icon-sun {
		display: none;
	}

	.icon-moon {
		display: block;
	}

	:global(html.dark) .icon-sun {
		display: block;
	}

	:global(html.dark) .icon-moon {
		display: none;
	}

	/* Main */
	main {
		flex: 1;
	}

	.main-inner {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.5rem 1rem;
	}

	/* Footer */
	footer {
		border-top: 1px solid var(--color-border);
		background-color: var(--color-bg-secondary);
	}

	.footer-inner {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.5rem 1rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		font-size: 0.8125rem;
		color: var(--color-text-secondary);
	}

	.footer-inner p {
		margin: 0;
	}

	.footer-inner a {
		color: var(--color-link);
		text-decoration: none;
	}

	.footer-inner a:hover {
		color: var(--color-link-hover);
		text-decoration: underline;
	}

	.github-link {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		color: var(--color-text-secondary);
	}

	.github-link:hover {
		color: var(--color-text);
	}

	/* Responsive — Mobile (≤ 640px) */
	@media (max-width: 640px) {
		.header-inner {
			height: 56px;
			padding: 0 0.75rem;
		}

		.logo-name {
			font-size: 1.125rem;
		}

		.tagline {
			display: none;
		}

		.search-input {
			width: 0;
			padding-left: 0;
			padding-right: 0;
			border-color: transparent;
			background: transparent;
		}

		.search-form {
			width: 36px;
			overflow: hidden;
			transition: width 0.2s;
		}

		.search-icon {
			left: 0.5rem;
		}

		.search-input:focus {
			width: 150px;
			padding: 0 0.75rem 0 2.125rem;
			border-color: var(--color-accent);
			background-color: var(--color-bg);
		}

		.search-form:focus-within {
			width: auto;
		}

		#theme-toggle {
			width: 44px;
			height: 44px;
		}

		.main-inner {
			padding: 1rem 0.75rem;
		}

		.footer-inner {
			flex-direction: column;
			gap: 0.5rem;
			text-align: center;
			padding: 1.25rem 0.75rem;
		}
	}

	/* Responsive — Tablet (641px – 1024px) */
	@media (min-width: 641px) and (max-width: 1024px) {
		.main-inner {
			padding: 1.5rem;
		}
	}
</style>

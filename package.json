{
	"name": "repotrend",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build && node scripts/inject-scheduled.mjs",
		"preview": "astro build && node scripts/inject-scheduled.mjs && wrangler dev",
		"astro": "astro",
		"deploy": "astro build && node scripts/inject-scheduled.mjs && wrangler deploy",
		"cf-typegen": "wrangler types",
		"db:seed": "wrangler d1 execute repotrend-db --local --file=./scripts/seed.sql",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check --write .",
		"typecheck": "astro check",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/cloudflare": "^12.6.12",
		"astro": "^5.17.1",
		"node-html-parser": "^7.0.2",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@types/node": "^25.3.0",
		"@vitest/coverage-v8": "^4.0.18",
		"vitest": "^4.0.18",
		"wrangler": "^4.67.0"
	}
}
